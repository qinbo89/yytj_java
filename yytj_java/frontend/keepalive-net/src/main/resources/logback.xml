<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="3 seconds">
	<contextName>task</contextName>

	<appender name="ROOT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
	    <file>/home/admin/logs/ad-net.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>/home/admin/logs/ad-net.%d{yyyy-MM-dd}.%i.log</FileNamePattern>
			<MaxHistory>300</MaxHistory>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
		        <!-- or whenever the file size reaches 100MB -->
		        <maxFileSize>100MB</maxFileSize>
		    </timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!-- 格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
		</encoder>
		<!--  
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>100MB</MaxFileSize>
		</triggeringPolicy>
		-->
	</appender>

	<jmxConfigurator />
	<root level="INFO">
		<appender-ref ref="ROOT_FILE" />
	</root>

	<logger name="com.hongbao" level="INFO" />
 	<jmxConfigurator /> 
 	<root level="${log.level.common:-INFO}"> 
	<appender-ref ref="ROOT_FILE" /> 
</root> 

	
</configuration>
